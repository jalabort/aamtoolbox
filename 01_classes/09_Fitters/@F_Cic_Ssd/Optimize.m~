function [delta,c] = Optimize(obj,i,tex,c,~)
  %Optimize Summary of this function goes here
  %   Detailed explanation goes here
  
  t = obj.tm{i}.C2Tex(c);
  
  [dtdx,dtdy] = obj.tm{i}.Compute_dtdxy(t);
  
  J = obj.tm{i}.Compute_dtdp(dtdx,dtdy,obj.dWdp{i});
  J = obj.tm{i}.ProjectOut(J);
  J2 = obj.tm{i}.Img2CroppedTex(obj.tm{i}.Tex2Img(J));
  
  H = J2' * J2;
  
  t = obj.tm{i}.Img2CroppedTex(obj.tm{i}.Tex2Img(t));
  tex = obj.tm{i}.Img2CroppedTex(obj.tm{i}.Tex2Img(tex));

  error = t - tex;
  ee = obj.tm{i}.Img2CroppedTex(obj.tm{i}.Tex2Img(error));
  J_x_error = J2' * error;
  delta = H \ J_x_error;
  
  c = obj.tm{i}.Tex2C(error + J*delta);
  
end

